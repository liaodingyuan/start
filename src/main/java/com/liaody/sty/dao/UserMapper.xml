<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.liaody.sty.dao.UserMapper">
    <select id="selectUser" parameterType="int" resultType="com.liaody.sty.entity.User">
    SELECT * FROM `USER` WHERE ID = #{id}
  </select>

    <select id="selectAllUsers" parameterType="int" resultType="com.liaody.sty.entity.User">
    SELECT * FROM `USER`
  </select>

</mapper>
